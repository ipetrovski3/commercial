<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Products</h1>
    <%= link_to 'Креирај нова гума', new_products_tire_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="products" class="min-w-full">
    <div class="flex flex-col">
      <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
          <div class="overflow-hidden">
            <table class="min-w-full">
              <thead class="bg-white border-b">
                <tr>
                  <th scope="col" class="text-sm font-medium w-5 text-gray-900 px-6 py-4 text-left">
                    #
                  </th>
                  <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                    Назив
                  </th>
                  <th scope="col" class="text-sm font-medium w-1/6 text-gray-900 px-6 py-4 text-left">
                    Сезона
                  </th>
                  <th scope="col" class="text-sm font-medium w-4 text-gray-900 px-6 py-4 text-left">
                    Продажна цена
                  </th>
                  <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                    Залиха
                  </th>
                </tr>
              </thead>
              <tbody>
              <%= turbo_frame_tag "products" do %>
                <%= render 'products/products', products: @tires %>  
              <% end %>
              </tbody>
            </table>
            <div class="bg-white mt-3 rounded-lg shadow-md overflow-hidden">
              <%== pagy_nav(@pagy, link_class: 'px-4 py-2 font-semibold text-gray-700 hover:bg-gray-200') %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
