
<%= form_with(model: @tire, class: "mt-8", data: { turbo: false }) do |form| %>
<div class="mx-auto max-w-lg">
  <div class="grid grid-cols-3 divide-x">
    <div data-controller="autocomplete" data-autocomplete-url-value="<%= dimensions_products_tires_path %>" role="combobox">
      <input type="text" id="dimension_input" placeholder="Димензија" class="block border border-gray-200 w-full rounded px-3 py-2 leading-6 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" data-autocomplete-target="input"/>
        <%= form.hidden_field :dimension,  data: { autocomplete_target: 'hidden' } %>
      <ul class="list-group overflow-y-scroll max-h-64 w-1/4 fixed bg-white z-0" data-autocomplete-target="results"></ul>
    </div>
  </div>
</div>
  <div class="py-1">
    <%= form.label :retail_price, class: "px-1 text-sm text-gray-600" %>
    <%= form.number_field :retail_price, class: "text-md block px-3 py-2 rounded-lg w-full
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none" %>
  </div>
  <div data-controller="select">
    <div class="py-1">
      <%= form.label :brand, class: "px-1 text-sm text-gray-600" %>
      <%= form.collection_select :brand_id, @brands, :id, :name,
       { prompt: 'Избери бренд' }, { class: "text-md block px-3 py-2 rounded-lg w-full
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none",
        data: { action: 'change->select#change' } }%>

    </div>
      <div class="py-1">
      <%= form.label :pattern, class: "px-1 text-sm text-gray-600" %>
      <%= form.select :pattern_id, [], { prompt: 'Избери модел'}, {class: "text-md block px-3 py-2 rounded-lg w-full
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none", data: { select_target: 'patternSelect' } } %>

    </div>
  </div>
  <div>
    <%= form.submit class: "mt-3 mb-3 text-lg font-semibold
            bg-gray-800 w-full text-white rounded-lg
            px-6 py-3 block shadow-xl hover:text-white hover:bg-black" %>
  </div>
<% end %>
