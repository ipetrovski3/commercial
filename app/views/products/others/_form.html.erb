<%= form_with(url: products_others_url, class: "mt-8") do |form| %>
<div class="mx-auto w-96 flex max-w-lg justify-between">
  <div class="">
    <%= form.select :vat, options_for_select(Product.vats.map {|k, v| [k, Product.vats.key(v)]}) %>
  </div>
</div>

  <div class="py-1">
    <%= form.label :retail_price, class: "px-1 text-sm text-gray-600" %>
    <%= form.number_field :retail_price, class: "text-md block px-3 py-2 rounded-lg w-full
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none" %>
  </div>

  <div class="flex justify-between">
    <div data-controller="autocomplete" data-autocomplete-url-value="<%= brands_products_others_path %>" role="combobox">
        <input type="text" id="brand_input" placeholder="Бренд" class="block border border-gray-200 w-full rounded px-3 py-2 leading-6 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" data-autocomplete-target="input"/>
          <%= form.hidden_field :brand_id, data: { autocomplete_target: 'hidden' } %>
        <ul class="list-group overflow-y-scroll max-h-64 fixed rounded bg-white z-0" data-autocomplete-target="results"></ul>
  </div>
    <div data-controller="autocomplete" data-autocomplete-url-value="<%= patterns_products_others_path %>" role="combobox">
        <input type="text" id="pattern_input" placeholder="Модел" class="block border border-gray-200 w-full rounded px-3 py-2 leading-6 focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" data-autocomplete-target="input"/>
          <%= form.hidden_field :pattern_id, data: { autocomplete_target: 'hidden' } %>
        <ul class="list-group overflow-y-scroll max-h-64 fixed rounded bg-white z-0" data-autocomplete-target="results"></ul>
    </div>
  </div>

  <div>
    <%= form.submit class: "mt-3 mb-3 text-lg font-semibold
            bg-gray-800 w-full text-white rounded-lg
            px-6 py-3 block shadow-xl hover:text-white hover:bg-black" %>
  </div>
<% end %>